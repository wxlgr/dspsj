page {
  background-color: #fff;
  font-size: 14px;
}

.container {
  margin: 0 auto;
  width: 100%;
  flex-direction: column;
  align-items: center;
  background-color: #F5F5F5;
  padding: 20rpx 0;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  border: 1px solid #ccc;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.nick-name {
  margin: 10rpx 0;
  width: 240rpx;
  text-align: center;
  color: #000;
  font-weight: 600;
}

#uploadVideo {
  width: 160rpx;
  border: 1px solid #ccc;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  color: #555;
}

#logout {
  margin-top: 5rpx;
  border: 1px solid #ccc;
  width: 120rpx;
  font-size: 24rpx;
  padding: 5rpx 10rpx;
  color: #555;
}

.counts {
  margin-top: 16rpx;
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  color: #555;

  font-size: 24rpx;
}


/* 用户 */
.preference {
  margin-top: 20rpx;
}

.tabs {
  display: flex;
  justify-content: space-between;
  background-color: #F5F5F5;

}

.tabs view {
  width: 33.33%;
  text-align: center;
  font-size: 48rpx;
}

.tabs view.active {
  background-color: greenyellow;
  color: #fff;
}

.content {
  margin-top: 20rpx;
  background-color: rgb(173, 226, 47);
  padding: 20rpx;
}

.Itembox {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 0;
}


 .text {
  padding: 10rpx 20rpx;
  background-color: rgb(204, 182, 182);
  width: 80%;
}
.deleteBtn {
  text-align: center;
  padding: 10rpx;
  color: #fff;
  border-radius: 10rpx;
  background-color: red;
} 