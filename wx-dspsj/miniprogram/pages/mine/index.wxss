page {
  /* background: -webkit-linear-gradient(-45deg, rgb(198, 222, 230), skyblue); */
  font-size: 14px;
}

/* 顶部展示用户的大盒子 */
.user {
  position: relative;
  height: 140px;
  /* background-color: red; */
}

/*头像，nickname,id */
.userInfo {
  position: absolute;
  left: 10px;
  bottom: 30px;
  display: flex;
  align-items: center;
}

.userInfo .avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #fff;
  margin-right: 5px;
}

.userInfo .uid {
  color: #555;
  font-size: 10px;
  width: 200px;
}

.nick-name {
  width: 120rpx;
  color: #fff;
  font-size: 24px;
  font-weight: bold;
}

/*下面的白色容器 */
.main-box {
  position: sticky;
  z-index: 1;
  background-color: #fff;
  /* 减去140px */
  height: calc(100vh - 120px);
  margin-top: -20px;
  border-top-left-radius: 20px;
  border-top-right-radius: 20px;
  padding: 10px;
}



/* 获赞、关注、粉丝数目 */
.counts {
  width: 80%;
  display: flex;
  justify-items: flex-start;
  color: #555;
  font-size: 12px;
}

/* 数字 */
.counts strong {
  font-weight: bold;
  font-size: 14px;
}

.counts view {
  margin-right: 10px;
}

.tabs {
  display: flex;
  align-items: center;
  background-color: #F5F5F5;
}

.tabs .tab {
  flex: 1;
  text-align: center;
  font-size: 14px;
  padding: 5px;
  color: #777;
}

/* 选中的tab */
.tabs .tab.active {
  color: #000;
  font-weight: bold;
  border-radius: 5px;
  /* background-color: #fff; */
  box-shadow: 1px 1px 6px 1px #ff6700;
}

/* tab对应的内容容器 */
.content {
  margin-top: 10px;
  /* background-color: rgb(173, 226, 47); */
  /* padding: 20rpx; */
  height: calc(50vh - 30rpx);
}

.tab-swiper {
  height: 100%;
  background-color: #f5f5f5;
}

.list {
  height: 100%;
}
.list-item {
  max-width: 100%;
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.vtitle,.title {
  flex: 1;
  padding: 10rpx;
  text-decoration: underline;
}
.btns {
  /* min-width: 40%; */
  text-align: center;
  display: flex;
  justify-content: space-evenly;
}
.btns view {
  border: 1px solid #ccc;
  border-radius: 8rpx;
  padding: 5rpx 6rpx;
  margin-left: 10rpx;
}
.editBtn,
.findBtn {
  background-color: #fff;
}
.deleteBtn,
.cancel {
  color: red;
}