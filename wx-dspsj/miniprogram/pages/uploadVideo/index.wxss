/* pages/uploadVideo/index.wxss */
@import '../../myiconfont/iconfont.wxss';


.preview{
  margin: 20rpx 0;
}
.bgm{
  font-size: 14px;
  text-decoration: underline;
}

.photos{
  margin-top: 20px;
  display: flex;
  flex-wrap: wrap;
}
.photo,.add{
  width:30%;
  margin: 10rpx;
  height: 200rpx;
  border-radius: 5px;
  border: 1px solid #ccc;
  overflow: hidden;
  position: relative;
}
.add{
  background-color: #fff;
  font-size: 3em;
  color: #999;
  font-weight: bold;
}
.photo .remove{
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  font-size: 1.5em;
  font-weight: bold;
  color: rgb(212, 26, 26);
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}




