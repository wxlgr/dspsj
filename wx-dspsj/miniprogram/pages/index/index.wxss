/* pages/videos/index.wxss */
@import '../../myiconfont/iconfont.wxss';

page{
  height: 100%;
}
.myswiper{
  height: 100%;
}
.swiper-item{
  height: 80%;
  background-color: aqua;
}
 video{
  width: 100%;
  height: 100%;
}

.vtitle{
  font-weight: 700;
  font-style: italic;
  color: #ff6700;
  font-size: 48rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 60%;
}


/*  */
.vauthor,.vdesc{
  position: absolute;
  color: #fff;
  left: 20rpx;
}
.vauthor{
  top: 820rpx;
}
.vdesc{
  top: 880rpx;
  width: 60%;
}


.iconbox{
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  color: #fff;
  right: 20rpx;
}

.download{
  position: absolute;
  left: 20rpx;
  top: 370rpx;
  width: 80rpx;
  height: 80rpx;
}
.download image{
  width: 100%;
  height: 100%;
}


.collection{
  top: 820rpx;
}
.comment{
  top: 670rpx;
}
.avatar{
  top: 370rpx;
  border-radius: 50%;
}
.avatar image{
  width: 100%;
  height: 100%;
}

.love{
  top: 520rpx;
}
.icon-love.active{
  color: red;
}
.icon-star-fill.active{
  color: #FFCA28;
}

.commentbox{
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60%;
  overflow: auto;
  background-color: aquamarine;
  transition: all 0.2s;
}
.commentItem{
  box-sizing: border-box;
  background-color: #ff6700;
  margin: 10rpx 0;
  padding: 10rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  color: #ccc;
  display: flex;
  overflow: hidden;
}

.sayer-avatar{

  height: 80rpx;
  width: 80rpx;
  overflow: hidden;
  border-radius: 50%;
  margin-right: 20rpx;
}
.sayer-avatar image{
  width: 100%;
  height: 100%;
}

.content{
  width: 80%;
  flex: 1;
  box-sizing: border-box;
  overflow: hidden;
}
.who{
  color: #000;
  font-size: 32rpx;
}
.time{
  font-size: 16rpx;
  color: #fff;
  font-style: italic;
}
.say{
  color: #FFCA28;
  font-size: large;
  text-indent: 2rem;
  box-sizing: border-box;
}


.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.sayInput{
  border: 1px solid red;
  border-radius: 10rpx;
  width: 80%;
  padding: 10rpx 15rpx;
}
#sendBtn{
  border: 1px solid #ccc;
  font-size: 24rpx;
  padding: 10rpx 15rpx;
  margin: 0;
  background-color: green;
  color: #fff;
}