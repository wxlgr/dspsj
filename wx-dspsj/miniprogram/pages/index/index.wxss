@import '../../myiconfont/iconfont.wxss';

.myswiper {
  height: 100vh;
  background-color: black;
  overflow: scroll;
}

.swiper-item {
  position: relative;
  display: flex;
  align-items: center;
}

video {
  height: 100%;
}

.vtitle {
  text-align: center;
  background-color: #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  font-weight: bold;
  font-style: italic;
  color: #ff6700;
  font-size: 40rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  max-width: 50%;
  top: 30rpx;
  text-decoration: none;
}

/*  */
.vauthor,
.vdesc {
  position: absolute;
  color: #fff;
  left: 20rpx;
}


.vauthor {
  bottom: 220rpx;
}

.vdesc {
  /* background-color: brown; */
  height: 60px;
  bottom:60rpx;
  max-width: 60%;
}

/* 图标设置 */
.iconfont {
  font-size: 32px;
  color: #fff;
}

.right-icons {
  position: absolute;
  right: 20rpx;
  bottom: 86rpx;
  /* background-color: #ccc; */
  display: flex;
  flex-direction: column;
  padding: 10rpx;
}

.icon-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 8rpx 0;
  /* overflow: hidden; */
}

/*  */
.icon-box text {
  font-size: 12px;
  color: #fff;
}

.avatar {
  margin-bottom: 40rpx;
  position: relative;
}
.avatar .author-img{
  border: 2px solid #fff;
  width: 40px;
  height: 40px;
  border-radius: 50%;
  overflow: hidden;
}

/* 关注作者图标 */
.avatar .follow-author {
  position: absolute;
  bottom: -10px;
  background-color: red;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.follow-author .iconfont{
  color: #fff;
  font-size: 18px;
  font-weight: bold;
}

.icon-love.active {
  color: red;
}

.icon-star-fill.active {
  color: #FFCA28;
}

.mask {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
  position: fixed;
  top: 0;
  left: 0;
}

.comment-box,
.share-box {
  padding: 20rpx;
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60%;
  overflow: auto;
  border-radius: 10px 10px 0 0;
  background-color: #fff;
  transition: all 0.2s;
}

.commentItem {
  margin: 10rpx 0;
  padding: 10rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  display: flex;
  /* overflow: hidden; */
  border-bottom: 1px solid #ccc;
  border-left: 1px solid #ccc;
}

.sayer-avatar {
  height: 80rpx;
  width: 80rpx;
  overflow: hidden;
  border-radius: 50%;
  border: 2px solid #ddd;
  margin-right: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sayInput {
  border: 1px solid red;
  border-radius: 10rpx;
  width: 80%;
  padding: 10rpx 15rpx;
}

#sendBtn {
  font-size: 28rpx;
  padding: 10rpx 15rpx;
  margin: 0;
  box-shadow: inset 1px 1px 10px 8px #01847f;
  color: #fff;
}

.content {
  box-sizing: border-box;
  border: 2px solid #fff;
  flex: 1;
  max-width: calc(100% - 40px);
  display: flex;
  flex-direction: column;
  color: #888;
}

.who {
  font-size: 32rpx;
  width: 120rpx;
  background-color: red;
}

.time {
  font-size: 24rpx;
}

.say {
  font-size: 36rpx;
  background-color: #f1f1f1;
  border-radius: 5px;
  box-shadow: 1px 1px 4px 1px #666;
  color: #000;
  white-space: normal;
  word-break: break-all;
  max-width: 88%;
  max-height: 250rpx;
  overflow: auto;
  margin: 10rpx 0;
}

.deleteBtn {
  color: #fff;
  background-color: red;
  padding: 5px;
  border-radius: 5px;
  align-self: flex-end;
}

.modal-top {
  display: block;
  border-bottom: 1px solid rgb(226, 218, 218);
  margin-bottom: 10px;
}

.modal-close {
  float: right;
}

.items {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.item {
  width: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

/* 图标 */
.item .icon {
  background-color: gold;
  border-radius: 50%;
  padding: 14rpx;
  width: 40px;
  height: 40px;
  margin-bottom: 10px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.download .icon {
  background-color: mediumpurple;
}
.report .icon {
  background-color: rgb(226, 55, 12);
}
.feedback .icon {
  background-color: rgb(168, 147, 147);
}
.others .icon {
  background-color: greenyellow;
}

/* 文字 */
.item text {
  color: #345;
  font-size: 12px;
}

.items .iconfont {
  font-size: 64rpx;
}



