/* pages/updateUser/index.wxss */
@import '../../myiconfont/iconfont.wxss';

.container {
  padding: 0;
}

.bg {
  height: 22vh;
  position: relative;
}

/* 对比度 */
.bg image {
  filter: contrast(1.2);
}

.bg-tip {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  background-color: rgba(0, 0, 0, 0.22);
  padding: 10rpx 20rpx;
  border-radius: 30px;
  color: #fff;
  font-size: 12px;
}

.bg-tip .iconfont {
  margin-right: 20rpx;
}

.main {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80vh;
  background-color: #fff;
  border-radius: 10px 10px 0 0;
}

.avatar {
  position: absolute;
  top: 0;
  left: 50%;
  transform: translate(-50%, -30%);
}

.avatar-img {
  position: relative;
  width: 100px;
  height: 100px;
  border: 3px solid #fff;
  border-radius: 50%;
  overflow: hidden;
}

/* 模糊 */
.avatar-img::before {
  position: absolute;
  display: block;
  content: '';
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.4;
}

.icon-camera_fill {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 36px;
  color: #fff;
}

.avatar-tip {
  margin-top: 20rpx;
  font-size: 15px;
  color: rgb(23, 124, 192);
}

.info {
  margin-top: 80px;
  padding: 20px;
}

.info-item {
  margin: 20px 0;
  color: #888;
}
.info-item strong.isPublic{
  font-size: 12px;
  color: #999;
  margin-left: 10rpx;
}

.info-item .label {
  width: 20%;
  margin-right: 20px;
}

.info-item .value {
  flex: 1;
  font-weight: bold;
  color: black;
  display: flex;
  align-items: center;
}