/* pages/follow/index.wxss */
@import '../../myiconfont/iconfont.wxss';

page {
  background-color: #fff;
}

.swiper {
  margin-top: 20rpx;
  height: 86vh;
}

/* 重置tab样式 */
.tabs .tab.active {
  box-shadow: none;
  border-bottom: 2px solid black;
}

.top {
  font-size: 14px;
  color: #666;
}

.sort-by .iconfont {
  margin-left: 10rpx;
}

.follow-list,
.fans-list {
  display: block;
  margin-top: 10rpx;
  height: 100%;
}

.sort-by {
  position: relative;
}

/*  */
.mask {
  z-index: 1;
  content: '';
  box-sizing: border-box;
  display: block;
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: transparent;
}

.select-list {
  z-index: 10;
  /* background-color: #fff; */
  width: 250rpx;
  position: absolute;
  right: 0;
  top: 20px;
  border-radius: 5px;
  border: 1px solid #666;
  overflow: hidden;
}

.select-list.none {
  width: 0;
  height: 0;
}

.select-list .sort-rule {
  background-color: #fff;
  font-size: 14px;
  color: black;
  padding: 10px;
  border-bottom: 1px solid #666;
}

/* 最后一个不需要底部边框 */
.sort-rule:last-child {
  border-bottom: none;
}

.list-item {
  margin-top: 15rpx;
  padding: 20rpx;
  /* background-color: #fff; */
}

.left {
  flex: 1;
}

.right{
  min-width: 42%;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: coral;
  overflow: hidden;
  margin-right: 20rpx;
}

.username {
  flex: 1;
  /* background-color: chartreuse; */
}

.btn {
  background-color: #e1e1e1;
  width: 60px;
  text-align: center;
  padding: 5px 10px;
  font-size: 12px;
  border-radius: 6px;
}

.btn.warn {
  background-color: red;
  color: #fff;
}