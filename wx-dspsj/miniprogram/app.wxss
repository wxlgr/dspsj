/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}

button {
  background: initial;
}
button:focus {
  outline: 0;
}
button::after {
  border: none;
}

page {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* 单行显示
*/
.single-line {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
/* 三行显示 */
.three-line{
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  word-break: break-all;
}
